{% extends "base.html.twig" %}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
	<h1 class="font-bold mb-8 text-center text-lg">Mes articles</h1>

	{% for a in articles %}
		<div class="mb-4 p-4 border rounded">
			<h2 class="font-bold">{{ a.titre }}</h2>
			<p>{{ a.contenu }}</p>
            <p class="text-center">
                <a href="{{ path('article_details', {id: a.id}) }}" class="text-blue-500">Voir l'article</a>
            </p>
		</div>
	{% endfor %}
{% endblock %}
