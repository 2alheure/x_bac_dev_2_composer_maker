{% extends "base.html.twig" %}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
	<h1 class="font-bold mb-8 text-center text-lg">Mes articles</h1>

	{% for a in articles %}
		<div class="mb-4 p-4 border rounded">
			<h2 class="font-bold">{{ a.titre }}</h2>
			<p>{{ a.contenu }}</p>
			<p class="flex gap-8 justify-center">
				<a href="{{ path('article_details', {id: a.id}) }}" class="text-blue-500">Voir l'article</a>
				
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('article_update', {id: a.id}) }}" class="text-orange-500">Modifier l'article</a>

					<a href="{{ path('article_remove', {id: a.id}) }}" class="text-red-500" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">
						Supprimer l'article
					</a>
				{% endif %}
			</p>
		</div>
	{% endfor %}
{% endblock %}
