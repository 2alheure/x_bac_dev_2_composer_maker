{% extends "base.html.twig" %}

{% block title %}
	{{article.titre}}
{% endblock %}


{% block body %}
	<div class="relative mb-8 w-full h-96">
		<img src="{{ article.image }}" alt="Image d'illustration" class="w-full h-96 object-cover mb-4 z-0">
		<div class="absolute w-full h-96 inset-0 flex flex-col justify-center items-center z-20">
			<h1 class="font-bold text-2xl text-white">{{ article.titre }}</h1>
			<p class="text-sm text-gray-300">Ecrit le
				{{ article.date|date('d/m/Y') }}</p>
		</div>
		<div class="absolute bg-black opacity-50 inset-0 z-10"></div>
	</div>

	<p>{{ article.contenu }}</p>
{% endblock %}
